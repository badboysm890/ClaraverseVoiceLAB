# Clara Voice Lab Docker Configuration
# Copy this file to .env and modify as needed

# Web application port (accessed by users)
WEB_PORT=80

# Backend API port (internal)
BACKEND_PORT=8000

# Frontend development port (internal)
FRONTEND_PORT=3000

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# Database configuration
DATABASE_URL=sqlite:///./data/database/users.db

# Security (change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRE_MINUTES=30

# Application settings
AUTO_UNLOAD_MODELS_MINUTES=5
MAX_UPLOAD_SIZE_MB=500

# CORS settings (comma-separated for multiple origins)
CORS_ORIGINS=*
